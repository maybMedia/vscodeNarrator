{
  "name": "vscodenarrator",
  "displayName": "vscodeNarrator",
  "description": "A friendly voice to echo your thoughts as you code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscodeNarrator.StartNarrator"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodenarrator.StartNarrator",
        "title": "Activate Narrator"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-wav": "^0.0.4",
    "@types/play-sound": "^1.1.2",
    "@types/vscode": "^1.98.0",
    "@types/wav": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "node-wav": "^0.0.2",
    "play-sound": "^1.1.6",
    "speaker": "^0.5.5",
    "wav": "^1.0.2",
    "web-audio-api": "^0.2.2"
  }
}
